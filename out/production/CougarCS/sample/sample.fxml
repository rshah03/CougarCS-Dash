<AnchorPane nodeOrientation="LEFT_TO_RIGHT" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
    <children>
        <Pane layoutY="-6.0" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: url(;">
            <children>
                <JFXTextField fx:id="user" layoutX="239.0" layoutY="120.0" maxWidth="253.0" minWidth="253.0" prefHeight="0.0" prefWidth="253.0">
                    <effect>
                        <DropShadow offsetX="10.0" offsetY="10.0" />
                    </effect>
                    <font>
                        <Font size="20.0" />
                    </font>
                </JFXTextField>
                <Label fx:id="userLabel" layoutX="122.0" layoutY="131.0" text="Username:" textAlignment="RIGHT">
                    <font>
                        <Font name="Calibri" size="25.0" />
                    </font>
                </Label>
                <Label fx:id="passLabel" layoutX="129.0" layoutY="185.0" prefHeight="30.0" prefWidth="127.0" text="Password:" textAlignment="RIGHT">
                    <font>
                        <Font name="Calibri" size="25.0" />
                    </font>
                </Label>
                <Group layoutX="192.0" layoutY="245.0">
                    <children>
                        <JFXButton fx:id="login" layoutX="1.0" layoutY="1.0" onAction="#makeLogin" text="Login">
                            <font>
                                <Font size="20.0" />
                            </font>
                            <effect>
                                <Reflection fraction="1.0" topOpacity="0.18" />
                            </effect>
                        </JFXButton>
                        <JFXButton fx:id="register" layoutX="113.0" layoutY="1.0" onAction="#makeRegister" text="Register">
                            <font>
                                <Font size="20.0" />
                            </font>
                            <effect>
                                <Reflection fraction="1.0" topOpacity="0.18" />
                            </effect>
                        </JFXButton>
                    </children>
                </Group>
                <JFXPasswordField fx:id="pass" layoutX="239.0" layoutY="174.0" maxWidth="260.0" minWidth="204.0" prefHeight="33.0" prefWidth="253.0">
                    <effect>
                        <DropShadow offsetX="10.0" offsetY="10.0" />
                    </effect>
                    <font>
                        <Font size="20.0" />
                    </font>
                </JFXPasswordField>
            </children>
        </Pane>
    </children>
</AnchorPane>
